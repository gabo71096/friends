<h1>Edit <%= resource_name.to_s.humanize %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:'form-control mb-3', autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, class:'form-control mb-3', autocomplete: "new-password" %>
  </div>

  <div class="field">
    <em>Password confirmation (<%= @minimum_password_length %> characters minimum)</em><br />
    <%= f.password_field :password_confirmation, class:'form-control mb-3', autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, class:'form-control mb-3', autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class:'btn btn-secondary mb-3' %>
  </div>
<% end %>

<div class='card mb-3'>
  <div class='card-body'>
    <h3>Cancel my account</h3>
    <p>Unhappy?</p>
    <%= button_to "Cancel my account", registration_path(resource_name), class:'btn btn-danger', data: { confirm: "Are you sure?" }, method: :delete %>
  </div>
</div>

<%= link_to "Back", :back, class:'btn btn-primary' %>
