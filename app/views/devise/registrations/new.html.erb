<h1 class='my-3'>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:'form-control mb-3', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class:'form-control mb-3', autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class:'form-control mb-3', autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:'btn btn-secondary mb-3' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
