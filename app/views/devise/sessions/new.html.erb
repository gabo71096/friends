<h1 class='my-3'>Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:'form-control mb-3', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class:'form-control mb-3', autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-check">
      <%= f.check_box :remember_me, class:'form-check-input' %>
      <%= f.label :remember_me, class:'form-check-label mb-3' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:'btn btn-secondary mb-3' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
