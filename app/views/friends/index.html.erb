<h1 class='my-3'>Friends</h1>

<% if user_signed_in? %>
  <table class='table table-striped table-hover'>
    <thead class='table-dark'>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if current_user == friend.user %>
          <tr>
            <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Friend', new_friend_path, class:'btn btn-secondary' %>
<% else %>
  <p>You need to be signed in to view your friends!</p>
<% end %>
